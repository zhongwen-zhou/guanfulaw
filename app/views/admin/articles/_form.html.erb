<%= form_for([:admin, @column, @article]) do |f| %>
    标题：<%= f.text_field(:title) %><br/>
	作者：<%= f.text_field(:author) %><br/>
	位置：<%= f.text_field(:index) %><br/>

	内容:
    <%= f.text_area :html_content %>

	<%= f.submit %>
<% end %>

<script type="text/javascript">
    var csrfitems = document.getElementsByName("csrfmiddlewaretoken");
    var csrftoken = "";
    if(csrfitems.length > 0)
    {
        csrftoken = csrfitems[0].value;
    }
         
    var editor ;
    KindEditor.ready(function(K) {  
        var options = {  
            width : '360px',  
            height : '300px',  
            filterMode : true,
            uploadJson : K.undef('/kindeditor/upload/'),
            extraFileUploadParams : {
                csrfmiddlewaretoken:csrftoken
            }
       };  
        editor = K.create('textarea', options);  
    });                      
</script> 