}
.left-EN{
  font-size: 12px;
}
.classic-info{
  width: 100%;
  height: 40px;
  text-align: center;
  font-size: 14px;
  color: #525252;
  line-height: 2.8;
  cursor: pointer;
}
.classic-info.selected{
  background-color: #f1f1f1;
}
.classic-right-head{
  width: 720px;
  height: 47px;
  background-image: url("/assets/about/aboutInfoHeadBG.png");
