<style type="text/css">
  
body
{
  text-align: center;
}
.classic-container{
  width: 980px;
  height: auto;
  margin: 30px auto;
  display: inline-block;
}
.classic-left-container{
  width: 240px;
  height: 100%;
  float: left;
}
.classic-right-container{
  width: 720px;
  height: 100%;
  margin-left: 20px;
  background-color: #f1f1f1;
  border-radius: 0 0 10px 10px;
  float: left;
}
.left-title{
  width: 100%;
  height: 40px;
  background-color: #00a0e9;
  color: #fff;
  line-height: 2;
}
.left-title span{
  display: inline-block;
}
.left-CN{
