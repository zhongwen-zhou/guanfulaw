.classic-time{
  text-align: center;
  font-size: 14px;
  color: #525252;
}
.classic-text{
  margin-top: 10px;
  text-align: left;
}
.classic-line{
  height: 1px;
  width: 100%;
  border-top: 1px solid black;
  margin-top: 2px;
}
.classic-change span{
  display: inline-block;
  text-indent: 0em;
}
.classic-change .next{
  color: #b6b6b6;
}
.article-link:hover{
  color: #C20C0C;
}

